                    <image>
                        <Image url="@../pics/button_secondary_glow.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="loginBtn" layoutX="61.0" layoutY="306.0" onMouseClicked="#login" onMouseEntered="#makeLoginOpaque" onMouseExited="#makeLoginTransparent" style="-fx-opacity: 0.6;">
